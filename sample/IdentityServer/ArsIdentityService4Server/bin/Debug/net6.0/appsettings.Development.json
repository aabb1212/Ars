{
  "DetailedErrors": true,
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ArsIdentityServerOption": {
    "ArsApiResources": [
      {
        "Name": "apiIds4First",
        "DisplayName": "my default grpcapi",
        "UserClaims": [
          "http://schemas.microsoft.com/ws/2008/06/identity/claims/role",
          "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name",
          "tenant",
          "sub"
        ],
        "Scopes": [
          "grpcapi-scope"
        ]
      },
      {
        "Name": "apiIds4Second",
        "DisplayName": "my default grpcapi",
        "UserClaims": [
          "http://schemas.microsoft.com/ws/2008/06/identity/claims/role",
          "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name",
          "tenant",
          "sub"
        ],
        "Scopes": [
          "ids4-scope",
          "openid",
          "profile"
        ]
      }
    ],
    "ArsClients": [
      {
        "AppKey": "grpc-key",
